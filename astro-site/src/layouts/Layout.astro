// Main Layout
// src/layouts/Layout.astro
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
    title: string;
    description?: string;
    keywords?: string;
}

const { 
  title, 
  description = "Southern Golden Retrievers - Premium golden retriever puppies in Knoxville, TN. Award-winning and health-tested parents.",
  keywords = "golden retriever puppies, golden retriever breeders, Knoxville TN, Tennessee golden retrievers, AKC golden retrievers, golden retriever breeder near me"
} = Astro.props;

// Structured data for Google
const structuredData = {
  "@context": "https://schema.org",
  "@type": "PetStore",
  "name": "Southern Golden Retrievers",
  "description": description,
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Knoxville",
    "addressRegion": "TN",
    "addressCountry": "US"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": "35.9606",
    "longitude": "-83.9207"
  },
  "url": "https://vbroda17.github.io/Knoxville-Golden-Retrievers/",
  "priceRange": "$$$$"
};

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    
    <!-- Geographic meta tags for local SEO -->
    <meta name="geo.region" content="US-TN" />
    <meta name="geo.placename" content="Knoxville" />
    <meta name="geo.position" content="35.9606;-83.9207" />
    
    <!-- Open Graph for social sharing -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Structured Data for Google -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
    
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={`https://vbroda17.github.io/Knoxville-Golden-Retrievers${Astro.url.pathname}`} />
  </head>
  <body>
    <Navbar />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>